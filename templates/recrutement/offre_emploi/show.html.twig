{% extends '_layout.html.twig' %}

{% block breadcrumbs %}
	<nav class="page-breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_recrutement_offre_emploi_index') }}">Offre</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">Détails</li>
		</ol>
	</nav>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h6 class="card-title">À propos</h6>
					<div class="table-responsive">
						<table class="table table-striped">
							<tbody>
							<tr>
								<th scope="row">Titre</th>
								<td>{{ offre_emploi.titre }}</td>
							</tr>
							<tr>
								<th scope="row">Description</th>
								<td>{{ offre_emploi.description }}</td>
							</tr>
							<tr>
								<th scope="row">Salaire minimum</th>
								<td>{{ offre_emploi.salaireMinimum ?? 'Non défini' }}</td>
							</tr>
							<tr>
								<th scope="row">Salaire maximum</th>
								<td>{{ offre_emploi.salaireMaximum ?? 'Non défini' }}</td>
							</tr>
							<tr>
								<th scope="row">Date et heure de création</th>
								<td>{{ offre_emploi.dateHeureCreation|date('d/m/Y H:i') }}</td>
							</tr>
							<tr>
								<th scope="row">Date d'expiration</th>
								<td>{{ offre_emploi.dateExpiration ? offre_emploi.dateExpiration|date('d/m/Y') : 'N/A' }}</td>
							</tr>
							<tr>
								<th scope="row">Statut</th>
								<td>{{ offre_emploi.statut }}</td>
							</tr>
							<tr>
								<th scope="row">Poste</th>
								<td>{{ offre_emploi.poste.nom }}</td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 stretch-card">
			<div class="card">
				<div class="card-body">
					<h6 class="card-title">Candidatures</h6>
					<p class="text-muted mb-1">Liste des candidats ayant postulé</p>
					<a href="{{ path('app_recrutement_candidat_new') }}" type="button" class="btn btn-primary btn-icon-text">
						<i class="btn-icon-prepend" data-feather="plus-circle"></i>
						Ajouter un nouveau
					</a>
					<div class="row pt-3">

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block customjs %}
	<script>

	</script>
{% endblock %}
