{% extends '_layout.html.twig' %}

{% block title %}Liste des candidats{% endblock %}

{% block breadcrumbs %}
    <nav class="page-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Candidat</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste</li>
        </ol>
    </nav>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Filtre</h6>
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="nom" class="form-label">Nom</label>
                                    <input type="text" id="nom" class="form-control" placeholder="Nom du candidat">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="prenoms" class="form-label">Prénoms</label>
                                    <input type="text" id="prenoms" class="form-control" placeholder="Prénoms du candidat">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="date-depot-min" class="form-label">Date de dépôt minimum</label>
                                    <input type="date" id="date-depot-min" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="date-depot-max" class="form-label">Date de dépôt maximum</label>
                                    <input type="date" id="date-depot-max" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="offre" class="form-label">Offre</label>
                                    <select id="offre" class="form-control">
                                        <option>OF001</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="mode-classification" class="form-label">Mode de classification</label>
                                    <select class="form-select" id="mode-classification">
                                        <option>Expériences</option>
                                        <option>Connaissances</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary submit">Appliquer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Liste des candidats</h6>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Identifiant</th>
                                <th>Nom</th>
                                <th>Prénoms</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Date de dépôt dossier</th>
                                <th>Curriculum vitae</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for candidat in candidats %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_recrutement_candidat_show', {"id": candidat.id}) }}">{{ candidat.id }}</a>
                                    </td>
                                    <td>{{ candidat.nom }}</td>
                                    <td>{{ candidat.prenom }}</td>
                                    <td>{{ candidat.email }}</td>
                                    <td>{{ candidat.telephone }}</td>
                                    <td>{{ candidat.dateCreation }}</td>
                                    <td>
                                        <a type="button" class="btn btn-primary btn-icon-text">
                                            <i class="btn-icon-prepend" data-feather="file"></i>
                                            Afficher
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">Pas encore de candidats.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
